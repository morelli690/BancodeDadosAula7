        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.htcursos.bancodedadosaula7.models" />
        <!--banco de dados Sugar ORM-->
        <activity android:name=".activities.MainSugarActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".activities.RegisterSugarActivity"/>

    </application>

</manifest>
